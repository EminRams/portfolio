---
import Section from "../Section.astro";

import { certificates } from "@cv";
---

<Section title="Certificados">
  <ul>
    {
      certificates.map(({ name, date }) => {
        const year = new Date(date).getFullYear();

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                </div>

                <time>{year}</time>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #555;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
  }

  time {
    padding-left: 3.5rem;
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
