---
import Section from "../Section.astro";

import Git from "@/icons/git.astro";
import GitHub from "@/icons/GitHub.astro";
import { skills } from "@cv";
import { languages } from "@cv";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => {
        return (
          <li>
            <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
  <ul>
    {
      languages.map(({ language }) => {
        return (
          <li>
            <span>{language}</span>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
    margin-bottom: 8px;
  }

  li {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
